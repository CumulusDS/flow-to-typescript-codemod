{
  "name": "flow-to-typescript-codemod",
  "version": "0.0.0",
  "private": true,
  "description": "Stripe's codemod for converting Flow to TypeScript.",
  "repository": "https://github.com/stripe-archive/flow-to-typescript-codemod",
  "license": "MIT",
  "author": "Stripe, Inc.",
  "types": "./flow.d.ts",
  "bin": {
    "typescriptify": "./bin.js"
  },
  "files": [
    "dist",
    "flow.d.ts",
    "bin.js"
  ],
  "scripts": {
    "build": "./esBuild.js",
    "dev": "yarn build && node ./dist/index.js",
    "typescriptify": "yarn build && node ./dist/index.js",
    "cumulusify": "yarn ts-node ./cumulusStepsRunner.ts",
    "lint": "eslint --ext ts src",
    "prepare": "yarn patch-package",
    "prettier": "prettier --write 'src/**/*.{js,jsx,mdx,ts,tsx}' !src/test/test_files/*.{js,jsx,ts,tsx}",
    "test": "jest",
    "types": "tsc -b ."
  },
  "devDependencies": {
    "@babel/parser": "7.27.2",
    "@babel/traverse": "^7.27.1",
    "@babel/types": "7.27.1",
    "@types/dedent": "^0.7.2",
    "@types/fs-extra": "^8.1.5",
    "@types/jest": "^27.5.2",
    "@types/minimist": "^1.2.5",
    "@types/node": "^12.20.55",
    "@types/react": "^16.14.64",
    "@types/signale": "^1.4.7",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "chalk": "^2.4.2",
    "csv-stringify": "^6.5.2",
    "dedent": "^0.7.0",
    "esbuild": "^0.25.4",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^25.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "flow": "^0.2.3",
    "flow-bin": "^0.162.1",
    "fs-extra": "^8.1.0",
    "ignore": "^5.3.2",
    "jest": "^26.6.3",
    "jest-junit": "^12.3.0",
    "patch-package": "^6.5.1",
    "prettier": "^2.8.8",
    "recast": "^0.20.5",
    "signale": "^1.4.0",
    "ts-jest": "^26.5.6",
    "ts-morph": "^13.0.3",
    "ts-node": "^10.9.2",
    "typescript": "4.9.5",
    "yargs": "^17.7.2"
  },
  "packageManager": "yarn@4.6.0"
}
